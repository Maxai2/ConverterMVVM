<Window x:Class="ConverterMVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConverterMVVM"
        mc:Ignorable="d"
        Title="Converter" Height="175" Width="240">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.5*"/>
			<RowDefinition Height="0.5*"/>
			<RowDefinition Height="0.5*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<ComboBox Grid.Row="0" Grid.Column="0" Name="ForCur" ItemsSource="{Binding Path=currencyItem}"/>

		<ComboBox Grid.Row="0" Grid.Column="1" Name="ToCur" ItemsSource="{Binding Path=currencyItem}"/>

		<TextBox Grid.Row="1" Grid.Column="0" Margin="7" VerticalContentAlignment="Center" FontSize="14" Name="tbValue" PreviewTextInput="tbValue_PreviewTextInput"/>

		<Label Grid.Row="1" Grid.Column="1" Margin="7" VerticalContentAlignment="Center" FontSize="14" Name="lResult"/>

		<Button Grid.Row="2" Grid.ColumnSpan="2" Margin="10" Content="Convert"/>

	</Grid>
</Window>


<!--Content="{Binding ElementName=ToCur, Path=SelectionBoxItem}"-->